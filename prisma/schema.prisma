datasource db {
  provider = "sqlite"
  url      = env("DATABASE_ROUTE")
}

generator client {
  provider        = "prisma-client-js"
}

model Account {
  id                 String  @id @default(cuid())
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  
  access_token       String?  
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  
  session_state      String?

  userId             String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {

  id            String    @id @default(cuid())
  name          String?   @default("")
  lastname      String?   @default("")
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  role          String?   @default("service")
  requests      Request[]

}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Request {

  id          String    @id @default(cuid())
  date        DateTime  @default(now())
  name        String
  building    String
  description String
  status      String    @default("pending")

  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

}